{
    "env": {
        "commonjs": true,
	"node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            1
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
	    { "allowTemplateLiterals": true }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
